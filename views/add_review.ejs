    <%- include("partials/header.ejs") %>

    <h2>Add a book to your database</h2>
    <%if(locals.data){%>
        <p><%= data %></p>
    <%}%>

    <%if(locals.err){%>
        <p><%= err %></p>
    <%}%>
    
    <form action="/submit_book/<%=isbn %>/<%= encodeURIComponent(title) %>/<%= encodeURIComponent(author) %>/<%= encodeURIComponent(cover) %>" method="POST">
        <label for="review">Review Text:</label><br>
        <textarea id="review" name="review" rows="4" cols="50"></textarea><br>
        
        <label for="rating">Rating:</label><br>
        <input type="number" id="rating" name="rating" min="1" max="5"><br><br>
        
        <input type="submit" value="Submit Book">
    </form>

    <%- include("partials/footer.ejs") %>