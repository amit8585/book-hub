    <%- include("partials/header.ejs") %>
    <h3>edit review or rating</h3>
    <form action="/submit_review/<%= data.user_id %>/<%= data.book_id %>" method="POST">
        <label for="review">Review Text:</label><br>
        <textarea id="review" name="review" rows="15" cols="100"> <%= data.review %> </textarea><br>
        
        <label for="rating">Rating:</label><br>
        <input type="number" id="rating" name="rating" min="1" max="5" value="<%= data.rating %>"><br><br>
        
        <input type="submit" value="Submit">
    </form>

